{
  "include": ["./src", "../../types"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "paths": {
      "@quen-ui/helpers": ["../helpers"],
    }
  }
}
