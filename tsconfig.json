{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@quen-ui/theme": ["./packages/theme/src"],
      "@quen-ui/hooks": ["./packages/hooks/src"],
      "@quen-ui/helpers": ["./packages/helpers/src"]
    },
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["packages/*", "./types.d.ts", "scripts"],
  "exclude": ["node_modules"],
}
